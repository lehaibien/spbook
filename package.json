{
  "name": "spbook",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "elysia": "^1.3.21",
      "@trpc/server": "^11.5.0",
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "@tailwindcss/vite": "^4.1.8",
      "@tanstack/react-router": "^1.132.31",
      "@tanstack/react-start": "^1.132.31",
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "tailwindcss": "^4.1.3",
      "tailwind-merge": "^3.3.1",
      "vite-tsconfig-paths": "^5.1.4",
      "@trpc/client": "^11.5.0",
      "@prisma/client": "^7.0.0",
      "@polar-sh/better-auth": "^1.1.3",
      "@tanstack/react-router-devtools": "^1.132.31",
      "@types/react": "~19.1.10",
      "@types/react-dom": "^19.0.4",
      "@vitejs/plugin-react": "^5.0.4",
      "vite": "^7.0.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @spbook/db db:push",
    "db:studio": "turbo -F @spbook/db db:studio",
    "db:generate": "turbo -F @spbook/db db:generate",
    "db:migrate": "turbo -F @spbook/db db:migrate",
    "db:start": "turbo -F @spbook/db db:start",
    "db:watch": "turbo -F @spbook/db db:watch",
    "db:stop": "turbo -F @spbook/db db:stop",
    "db:down": "turbo -F @spbook/db db:down"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.7",
    "ultracite": "6.3.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "@types/bun": "^1.2.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.2.15"
}
